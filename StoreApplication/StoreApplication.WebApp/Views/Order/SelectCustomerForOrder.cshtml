@model IEnumerable<StoreApplication.Data.Entities.Customers>

@{
    ViewData["Title"] = "Select Customer";
}

<h1>Select Customer To See Order Hsitory</h1>

<form asp-action="SelectedCustomer">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Selection
                </th>
                <th>
                    Customer ID
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <tr>
                    <td>
                        <div class="form-group">
                            <input type="radio" name="selectCustomer" value="@Html.DisplayFor(modelItem => item.CustomerId)" required />
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group text-center">
        <input type="submit" value="Select Customer" class="btn btn-primary btn-block" />
    </div>
</form>

