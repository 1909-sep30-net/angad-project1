
@{
    ViewData["Title"] = "Order Menu";
}

    <div class="text-center">
        <h1 class="display-4">Orders Menu</h1>

        <img id="rcorners" src="https://i.imgur.com/XWavUIx.png" width="400" height="100" />
        <br /><br />

        <p>Please Select Your Desired Option: </p>

        <br />

        <a asp-area="" asp-controller="Order" asp-action="SelectCustomer">
            <button type="button" class="btn btn-dark">Create A New Order</button>
        </a>
        <br />
        <br />
        <a asp-area="" asp-controller="Order" asp-action="ListOrders">
            <button type="button" class="btn btn-dark">View All Orders</button>
        </a>
        <br />
        <br />
        <a asp-area="" asp-controller="Order" asp-action="SelectCustomerForOrder">
            <button type="button" class="btn btn-dark">Order History Of A Customer</button>
        </a>
        <br />
        <br />
        <a asp-area="" asp-controller="Order" asp-action="SelectStoreForOrder">
            <button type="button" class="btn btn-dark">Order History Of A Store</button>
        </a>
        <br /><br />
        <br />

        <img id="rcorners" src="https://i.imgur.com/XjcB63I.png" width="800" height="300" />

