@model IEnumerable<StoreApplication.Data.Entities.Products>

@{
    ViewData["Title"] = "SelectProducts";
}

<h1>Please Select a Game To Buy</h1>

<form asp-action="CreateProduct">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Game
                </th>
                <th>
                    Platform
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <tr>
                    <td>
                        <div class="form-group">
                            <input type="radio" name="selectProduct" value="@Html.DisplayFor(modelItem => item.ProductId)" required />
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductType)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="form-group text-center">
        <input type="submit" value="Select Game" class="btn btn-primary btn-block" />
    </div>
</form>