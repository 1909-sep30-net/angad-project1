@model StoreApplication.Data.Entities.Products

@{
    ViewData["Title"] = "AddProduct";
}

<h1>Add New Game</h1>

<h4>Please Enter Details For The Game To Be Sold</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label">Game Name</label>
                <input asp-for="ProductName" class="form-control" required />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductType" class="control-label">Platform</label>
                <input asp-for="ProductType" class="form-control" required />
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductUrl" class="control-label">Cover Art [Optional]</label>
                <input asp-for="ProductUrl" class="form-control" value="https://i.imgur.com/jHQPWeo.png"/>
                <span asp-validation-for="ProductType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Number Of Stores</label>
                <select name="storeCount" id="stores">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                </select>
            </div>

            <div id="storeForm">
                <div class="form-group">
                    <label>Location</label>
                    <select name="Location1" id="stores">
                        <option value="">Select Location</option>
                        <option value="1">LA</option>
                        <option value="2">San Diego</option>
                        <option value="3">Sacramento</option>
                        <option value="4">Dallas</option>
                        <option value="5">Arlington</option>
                        <option value="6">Fort Worth</option>
                    </select>
                    <div class="form-group">
                        <label>Inventory</label>
                        <input name="Inventory1" class="form-control" />
                    </div>
                </div>
            </div>
            <div id="storeForm2">
                <div class="form-group">
                    <label>Location</label>
                    <select name="Location2" id="stores">
                        <option value="">Select Location</option>
                        <option value="1">LA</option>
                        <option value="2">San Diego</option>
                        <option value="3">Sacramento</option>
                        <option value="4">Dallas</option>
                        <option value="5">Arlington</option>
                        <option value="6">Fort Worth</option>
                    </select>
                    <div class="form-group">
                        <label>Inventory</label>
                        <input name="Inventory2" class="form-control" />
                    </div>
                </div>
            </div>
            <div id="storeForm3">
                <div class="form-group">
                    <label>Location</label>
                    <select name="Location3" id="stores">
                        <option value="">Select Location</option>
                        <option value="1">LA</option>
                        <option value="2">San Diego</option>
                        <option value="3">Sacramento</option>
                        <option value="4">Dallas</option>
                        <option value="5">Arlington</option>
                        <option value="6">Fort Worth</option>
                    </select>
                    <div class="form-group">
                        <label>Inventory</label>
                        <input name="Inventory3" class="form-control" />
                    </div>
                </div>
            </div>
            <div id="storeForm4">
                <div class="form-group">
                    <label>Location</label>
                    <select name="Location4" id="stores">
                        <option value="">Select Location</option>
                        <option value="1">LA</option>
                        <option value="2">San Diego</option>
                        <option value="3">Sacramento</option>
                        <option value="4">Dallas</option>
                        <option value="5">Arlington</option>
                        <option value="6">Fort Worth</option>
                    </select>
                    <div class="form-group">
                        <label>Inventory</label>
                        <input name="Inventory4" class="form-control" />
                    </div>
                </div>
            </div>
            <div id="storeForm5">
                <div class="form-group">
                    <label>Location</label>
                    <select name="Location5" id="stores">
                        <option value="">Select Location</option>
                        <option value="1">LA</option>
                        <option value="2">San Diego</option>
