                    </select>
                    <div class="form-group">
                        <label>Inventory</label>
                        <input name="Inventory6" class="form-control" />
                    </div>
                </div>
            </div>


            <script>
                var stores = document.getElementById("stores");
                var storeCount = 0;
                stores.onchange = function () {
                    storeCount = stores.options[stores.selectedIndex].value;
                    if (storeCount == 0) {
                        document.getElementById("storeForm").style.display = "none";
                        document.getElementById("storeForm2").style.display = "none";
                        document.getElementById("storeForm3").style.display = "none";
                        document.getElementById("storeForm4").style.display = "none";
                        document.getElementById("storeForm5").style.display = "none";
                        document.getElementById("storeForm6").style.display = "none";
                    }
                    if (storeCount == 1) {
                        document.getElementById("storeForm").style.display = "block";
                        document.getElementById("storeForm2").style.display = "none";
                        document.getElementById("storeForm3").style.display = "none";
                        document.getElementById("storeForm4").style.display = "none";
                        document.getElementById("storeForm5").style.display = "none";
                        document.getElementById("storeForm6").style.display = "none";
                    }
                    if (storeCount == 2) {
                        document.getElementById("storeForm").style.display = "block";
                        document.getElementById("storeForm2").style.display = "block";
                        document.getElementById("storeForm3").style.display = "none";
                        document.getElementById("storeForm4").style.display = "none";
                        document.getElementById("storeForm5").style.display = "none";
                        document.getElementById("storeForm6").style.display = "none";
                    }
                    if (storeCount == 3) {
                        document.getElementById("storeForm").style.display = "block";
                        document.getElementById("storeForm2").style.display = "block";
                        document.getElementById("storeForm3").style.display = "block";
                        document.getElementById("storeForm4").style.display = "none";
                        document.getElementById("storeForm5").style.display = "none";
                        document.getElementById("storeForm6").style.display = "none";
                    }
                    if (storeCount == 4) {
                        document.getElementById("storeForm").style.display = "block";
                        document.getElementById("storeForm2").style.display = "block";
                        document.getElementById("storeForm3").style.display = "block";
                        document.getElementById("storeForm4").style.display = "block";
                        document.getElementById("storeForm5").style.display = "none";
                        document.getElementById("storeForm6").style.display = "none";
                    }
                    if (storeCount == 5) {
                        document.getElementById("storeForm").style.display = "block";
                        document.getElementById("storeForm2").style.display = "block";
                        document.getElementById("storeForm3").style.display = "block";
                        document.getElementById("storeForm4").style.display = "block";
                        document.getElementById("storeForm5").style.display = "block";
                        document.getElementById("storeForm6").style.display = "none";
                    }
                    if (storeCount == 6) {
                        document.getElementById("storeForm").style.display = "block";
                        document.getElementById("storeForm2").style.display = "block";
                        document.getElementById("storeForm3").style.display = "block";
                        document.getElementById("storeForm4").style.display = "block";
                        document.getElementById("storeForm5").style.display = "block";
                        document.getElementById("storeForm6").style.display = "block";
                    }
                }
                function dontShowForm() {
                    document.getElementById("storeForm").style.display = "none";
                    document.getElementById("storeForm2").style.display = "none";
                    document.getElementById("storeForm3").style.display = "none";
                    document.getElementById("storeForm4").style.display = "none";
                    document.getElementById("storeForm5").style.display = "none";
                    document.getElementById("storeForm6").style.display = "none";
                }
                dontShowForm();
            </script>


            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Go Back</a>
</div>

