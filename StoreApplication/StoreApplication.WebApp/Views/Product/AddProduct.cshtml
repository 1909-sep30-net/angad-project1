                    </select>
                    <div class="form-group">
                        <label>Inventory</label>
                        <input name="Inventory5" class="form-control" />
                    </div>
                </div>
            </div>
            <div id="storeForm6">
                <div class="form-group">
                    <label>Location</label>
                    <select name="Location6" id="stores">
                        <option value="">Select Location</option>
                        <option value="1">LA</option>
